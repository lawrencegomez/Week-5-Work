<p id="notice"><%= notice %></p>

<h1>Listing Vampires</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Sire</th>
      <th>Staked</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <!-- iterate through all the vampires! -->
    <% @vampires.each do |v| %>
      <tr>
        <td><%= v.name %></td>
        <td><%= v.age %></td>
        <td><%= v.sire %></td>
        <td><%= v.staked %></td>
        <td><%= link_to 'Show', vampire_path(v) %></td>
        <td><%= link_to 'Edit Vampire', edit_vampire_path(v) %></td>
        <td><%= link_to 'Delete Vampire', destroy_vampire_path(v), {method: 'DELETE'} %></td>
      </tr>
      <% end %>
    <!-- end the iterator here -->
  </tbody>
</table>

<br>

